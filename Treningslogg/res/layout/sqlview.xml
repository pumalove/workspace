<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#303233"
    tools:context=".SQLView" >
    

    <TableLayout android:layout_width="fill_parent" android:id="@+id/tableLayout" android:layout_height="fill_parent">
        <TableRow>
            <TextView android:text="Usernames" android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/Usernames" android:layout_weight="1"/>
            <TextView android:text="Names" android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/Names" android:layout_weight="1"/>
        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/bLastOpp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last opp" />
    
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="49dp" />
    
</LinearLayout>
